@font-face {
	font-family: "{{fontName}}";
	src: {{{src}}};
}

.icon {
  font-family: "{{fontName}}";
  line-height: 1;

	&:before {
    display: inline-block;
		font-style: normal;
		font-weight: normal !important;
		vertical-align: top;
	}
}

{{#each codepoints}}
  .icon-{{@key}}:before {
    content: "\\{{{this}}}";
  }
{{/each}}
